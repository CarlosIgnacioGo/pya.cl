<%= form_for(@service, html: {:multipart => true}) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>
      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Nombre' %><br>
    <%= f.text_field :name, class: 'form-control', style: 'width:70%;' %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Descripción' %><br>
    <%= f.text_area :description, class: 'form-control', style: 'width:70%;' %>
  </div>
  <div class="form-groupº">
    <%= f.label :phone, 'Celular'%><br>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :age, 'Edad'%><br>
    <%= f.text_field :age, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :weight, 'Peso'%><br>
    <%= f.text_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price, 'Precio'%><br>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'Correo Electronico' %><br>
    <%= f.text_field :email, class: 'form-control', style: 'width:70%;' %>
  </div>
  <div class="form-group">
      <%= f.label :photo, class: 'label-file btn btn-success' do %>
      <span class="glyphicon glyphicon-camera"></span> Sube una foto de tu servicio
    <%end%>
    <br>
    <%= f.file_field :photo, class: 'input-file'%>
  </div>
  <div class="form-group">
      <%= f.label :photo_2, class: 'label-file btn btn-success' do %>
