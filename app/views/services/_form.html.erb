    <br>
    <%= f.file_field :photo_2, class: 'input-file'%>
  </div>

  <div class="form-group">
      <%= f.label :photo_3, class: 'label-file btn btn-success' do %>
      <span class="glyphicon glyphicon-camera"></span> Sube una foto de tu servicio
    <%end%>
    <br>
    <%= f.file_field :photo_3, class: 'input-file'%>
  </div>

  <div class="form-group">
      <%= f.label :photo_4, class: 'label-file btn btn-success' do %>
      <span class="glyphicon glyphicon-camera"></span> Sube una foto de tu servicio
    <%end%>
    <br>
    <%= f.file_field :photo_4, class: 'input-file'%>
  </div>

  <div class="form-group">
      <%= f.label :photo_5, class: 'label-file btn btn-success' do %>
      <span class="glyphicon glyphicon-camera"></span> Sube una foto de tu servicio
    <%end%>
    <br>
    <%= f.file_field :photo_5, class: 'input-file'%>
  </div>
  <div class="form-group">
    <%= f.label :smoking %>
    <%= f.select :smoking, ['No','Si'] %>
  </div>
  <div class="form-group">
    <h3>Pon tu servicios en una o varios categorias</h3>
    <% @category.each do |category| %>
      <li>
        <%= f.check_box 'category_ids', {multiple: true}, category.id, [] %>
        <span><%=category.name%></span>
      </li>
    <%end%>
  </div>
  <div class="form-group">
    <%= f.submit 'Subir servicio', class: 'btn btn-primary' %>
  </div>
<% end %>
  






