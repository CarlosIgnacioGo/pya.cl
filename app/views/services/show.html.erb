<!--Single Page starts Here-->
<div class="product-main">
   <div class="container">
     <div class="ctnt-bar cntnt">
       <div class="content-bar">
         <div class="single-page">    
           <div class="details-left-slider">
            <div class="flexslider">
                      <!-- FlexSlider -->
                    <script src="js/imagezoom.js"></script>
                      <script defer src="js/jquery.flexslider.js"></script>
                    <link rel="stylesheet" href="css/flexslider.css" type="text/css" media="screen" />

                    <script>
                    // Can also be used with $(document).ready()
                    $(window).load(function() {
                      $('.flexslider').flexslider({
                      animation: "slide",
                      controlNav: "thumbnails"
                      });
                    });
                    </script>
                  <!-- //FlexSlider-->

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                  <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <% if @service.count_photos >= 1 %>
                      <% for i in 0..@service.count_photos  %>
                        <li data-target="#myCarousel" data-slide-to="0"></li>
                      <%end%>
                    <%end%> 
                  </ol>

                  <!-- Wrapper for slides -->
                  <div class="carousel-inner" role="listbox">
                    <% if @service.photo.present? %>
                      <div class="item active">
                        <img src="<%=@service.photo.url%>" data-imagezoom="true" class="img-responsive">
                      </div>
                    <%end%>

                    <% if @service.photo_2.present? %>
                      <div class="item">
                        <img src="<%=@service.photo_2.url%>" data-imagezoom="true" class="img-responsive">
                      </div>
                    <%end%>

                    <% if @service.photo_3.present? %>
                      <div class="item">
                        <img src="<%=@service.photo_3.url%>" data-imagezoom="true" class="img-responsive">
                      </div>
                    <%end%>

                    <% if @service.photo_4.present? %>
                      <div class="item">
                        <img src="<%=@service.photo_4.url%>" data-imagezoom="true" class="img-responsive">
                      </div>
                    <%end%>

                    <% if @service.photo_5.present? %>
                      <div class="item">
                        <img src="<%=@service.photo_5.url%>" data-imagezoom="true" class="img-responsive">
                      </div>
                    <%end%>
                  </div>

                  <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                </div>
              <div class="clearfix"></div>
            </div>
           </div>
           <div class="details-left-info">
              <h3><%= @service.name %></h3>
              <h4>
                <% @service.categories.each do |category| %>
                  <%= category.name %>
                <%end%>  
              </h4>            
              <p>$<%= @service.price %></p>
              <div class="flower-type">
                <div class="row">
                  <div class="col-md-4">
                    <p>Fono :<a href="#"><%= @service.phone %></a></p>
                    <p>Edad :<a href="#"><%= @service.age %></a></p>
                  </div>
                  <div class="col-md-4">
                    <p>Peso :<a href="#"><%= @service.weight %></a></p>
                    <p>Fuma :<a href="#"><%= @service.smoking %></a></p>
                  </div>
                  <div class="col-md-4">
                    <p>Depilaci√≥n :<a href="#"><%= @service.hair_removal %></a></p>
                  </div>
                </div>
              </div>
              <h5>Servicios :</h5>
              <p class="desc">
                <% @service.additionals.each do |additional| %>
                  <%=additional.name%> ,
                <%end%>
              </p>
              <h5>Description :</h5>
              <p class="desc"><%= @service.description %></p>
           </div>
           <div class="clearfix"></div>         
         </div>
       </div>
     </div>    
   </div>
</div>
